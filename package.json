{
  "name": "yai-eth-staker",
  "version": "0.1.0",
  "description": "Yet Another Implementation of secure ETH Staking",
  "repository": "https://github.com/NpoolPlatform/yai-eth-staker.git",
  "author": "kikakkz <kikakkz@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "compile": "yarn hardhat compile",
    "deploy": "yarn hardhat deploy --network hardhat",
    "deploy:mainnet": "yarn hardhat deploy --network mainnet",
    "deploy:holesky": "yarn hardhat deploy --network holesky",
    "deploy:localhost": "yarn hardhat deploy --network localhost",
    "invoke": "yarn hardhat --network localhost invoke",
    "invoke:holesky": "yarn hardhat --network holesky invoke",
    "watch": "yarn hardhat deploy --watch --network hardhat",
    "export": "yarn hardhat deploy --network hardhat --export ./output/export/hardhat.json",
    "verify": "yarn hardhat --network mainnet etherscan-verify --sleep",
    "verify:holesky": "yarn hardhat --network holesky etherscan-verify --sleep --api-url https://api-holesky.etherscan.io/api",
    "test": "yarn hardhat clean && yarn hardhat test",
    "coverage": "yarn hardhat coverage && mv coverage.json ./output",
    "install:slither": "pip install slither-analyzer",
    "slither": "slither --filter-paths node_modules,old --exclude conformance-to-solidity-naming-conventions .",
    "lint": "yarn lint:sol && yarn prettier:check",
    "lint:fix": "yarn lint:sol:fix && yarn prettier:write",
    "lint:sol": "solhint \"contracts/**/*.sol\" --ignore-path .solhintignore",
    "lint:sol:fix": "solhint \"contracts/**/*.sol\" --ignore-path .solhintignore --fix",
    "prettier:check": "prettier --check \"**/*.{js,json,md,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,ts,yml}\"",
    "precommit:fix": "cp ./hooks/pre-commit ./.git/hooks"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "2.0.0",
    "@nomicfoundation/hardhat-ethers": "3.0.0",
    "@nomicfoundation/hardhat-ignition": "0.15.5",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.5",
    "@nomicfoundation/hardhat-network-helpers": "1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "2.0.0",
    "@nomicfoundation/ignition-core": "0.15.5",
    "@nomiclabs/hardhat-truffle5": "^2.0.7",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "9.0.0",
    "@types/chai": "4",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.11",
    "chai": "4",
    "chai-ethers": "^0.0.1",
    "dotenv": "^16.0.3",
    "ethers": "^6.13.1",
    "glob": "^7.1.7",
    "hardhat": "^2.22.6",
    "hardhat-deploy": "^0.12.4",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-gas-reporter": "1.0.8",
    "mocha": "^10.1.0",
    "pako": "^1.0.6",
    "pre-commit": "^1.2.2",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.3.1",
    "query-string": "^7.0.1",
    "solhint-community": "^4.0.0",
    "solhint-plugin-chainlink-solidity": "npm:@chainlink/solhint-plugin-chainlink-solidity",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "0.8.3",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  },
  "engines": {
    "node": "18"
  },
  "resolutions": {
    "nan": "2.18.0"
  }
}
